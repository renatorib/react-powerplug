{
  "name": "react-powerplug",
  "version": "0.1.2",
  "description": "Give life to your dumb components",
  "author": "Renato Ribeiro (http://github.com/renatorib)",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "build:flow": "cpy src/index.js.flow lib & cpy src/index.js.flow es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd":
      "cross-env BABEL_ENV=rollup NODE_ENV=development rollup -c -o dist/react-powerplug.js",
    "build:umd:min":
      "cross-env BABEL_ENV=rollup NODE_ENV=production rollup -c -o dist/react-powerplug.min.js",
    "build:all":
      "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min && npm run build:flow",
    "build": "npm run clean && npm run build:all",
    "clean": "rimraf lib dist es",
    "typecheck:flow": "flow check && [[ $(flow check) == 'Found 0 errors' ]]",
    "lint": "eslint src",
    "test": "jest",
    "prepublishOnly": "npm run lint && npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/renatorib/react-powerplug.git"
  },
  "files": ["dist", "lib", "src", "es"],
  "keywords": ["react", "reactjs", "components", "dumb", "state"],
  "bugs": {
    "url": "https://github.com/renatorib/react-powerplug/issues"
  },
  "homepage": "https://github.com/renatorib/react-powerplug",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "cpy-cli": "^1.0.1",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "eslint": "^4.6.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.3.0",
    "flow-bin": "^0.63.1",
    "jest": "^21.1.0",
    "react": "^15.6.2",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.49.3",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0-0"
  }
}
